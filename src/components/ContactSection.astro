---
interface Props {
  t: any;
}

const { t } = Astro.props;
---

<section id="contact" class="contact-section">
  <div class="section-header">
    <h2>{t.contactTitle}</h2>
  </div>
  
  <div class="contact-content">
    <p class="contact-description">{t.contactDescription}</p>
    
    <div class="contact-methods">
      <a href="mailto:contact@christophecraig.com" class="contact-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
          <polyline points="22,6 12,13 2,6"></polyline>
        </svg>
        <span>contact@christophecraig.com</span>
      </a>
      
      <a href="https://github.com/christophecraig" target="_blank" rel="noopener noreferrer" class="contact-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
        </svg>
        <span>GitHub</span>
      </a>
      
      <a href="https://linkedin.com/in/christophecraig" target="_blank" rel="noopener noreferrer" class="contact-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
          <rect x="2" y="9" width="4" height="12"></rect>
          <circle cx="4" cy="4" r="2"></circle>
        </svg>
        <span>LinkedIn</span>
      </a>
      
      <a href="https://instagram.com/christophecraig" target="_blank" rel="noopener noreferrer" class="contact-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
          <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
          <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
        </svg>
        <span>Instagram</span>
      </a>
    </div>
  </div>
</section>

<style>
  .contact-section {
    margin-bottom: 3rem;
    width: 100%;
    padding: 2rem 1rem;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.8), rgba(236, 248, 255, 0.5));
    border-radius: 20px;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .section-header h2 {
    font-size: 2rem;
    color: var(--accent-dark);
    position: relative;
    display: inline-block;
    padding-bottom: 0.5rem;
  }
  
  .section-header h2::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background: linear-gradient(90deg, var(--mint-green), var(--soft-blue));
    border-radius: 2px;
  }
  
  .contact-description {
    text-align: center;
    font-size: 1.1rem;
    color: rgb(var(--gray-dark));
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    width: 100%;
  }
  
  .cta-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
    max-width: 300px;
    margin: 0 auto 2rem;
    width: 100%;
  }
  
  .primary-button, .secondary-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    width: 100%;
    box-sizing: border-box;
    border: none;
  }
  
  .primary-button {
    background: linear-gradient(135deg, var(--mint-green), var(--light-coral));
    color: #191414;
    box-shadow: 0 4px 15px rgba(152, 216, 200, 0.3);
  }
  
  .primary-button:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 6px 20px rgba(152, 216, 200, 0.5);
    background: linear-gradient(135deg, var(--soft-blue), var(--light-lavender));
  }
  
  .secondary-button {
    background: linear-gradient(135deg, var(--pale-yellow), var(--soft-blue));
    color: #191414;
    box-shadow: 0 4px 15px rgba(174, 214, 241, 0.3);
  }
  
  .secondary-button:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 6px 20px rgba(174, 214, 241, 0.5);
    background: linear-gradient(135deg, var(--light-coral), var(--mint-green));
  }
  
  .contact-methods {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    width: 100%;
  }
  
  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 242, 204, 0.5));
    border-radius: 50px;
    color: #191414;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    width: 100%;
    max-width: 300px;
    justify-content: center;
    box-sizing: border-box;
    box-shadow: 0 2px 8px rgba(152, 216, 200, 0.2);
    border: 1px solid rgba(152, 216, 200, 0.3);
  }
  
  .contact-link:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 4px 15px rgba(152, 216, 200, 0.4);
    background: linear-gradient(135deg, var(--mint-green), var(--pale-yellow));
  }
  
  @media (min-width: 768px) {
    .contact-methods {
      flex-direction: row;
      justify-content: center;
      flex-wrap: wrap;
    }
    
    .cta-buttons {
      flex-direction: row;
      justify-content: center;
      max-width: none;
    }
    
    .primary-button, .secondary-button {
      width: auto;
    }
  }
  
  @media (max-width: 768px) {
    .section-header h2 {
      font-size: 1.75rem;
    }
    
    .contact-description {
      font-size: 1rem;
    }
    
    .contact-link {
      max-width: 100%;
    }
  }
  
  @media (max-width: 480px) {
    .primary-button, .secondary-button {
      padding: 0.8rem 1.2rem;
      font-size: 0.9rem;
    }
    
    .contact-link {
      padding: 0.8rem 1.2rem;
      font-size: 0.9rem;
    }
  }
</style>