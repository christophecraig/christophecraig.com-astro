---
interface Props {
  t: any;
}

const { t } = Astro.props;
---

<section class="contact-section">
  <div class="section-container">
    <div class="section-header text-center">
      <h2 class="section-title">{t.contactTitle}</h2>
      <div class="section-divider"></div>
      <p class="section-description">{t.contactDescription}</p>
    </div>
    
    <div class="contact-content">
      <div class="cta-buttons">
        <a href="mailto:contact@christophecraig.com" class="btn btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
          <span>Send Me an Email</span>
        </a>
        
        <a href="https://calendly.com/christophecraig" target="_blank" rel="noopener noreferrer" class="btn btn-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          <span>Schedule a Call</span>
        </a>
      </div>
      
      <div class="contact-methods">
        <a href="mailto:contact@christophecraig.com" class="contact-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
          <span>contact@christophecraig.com</span>
        </a>
        
        <a href="https://github.com/christophecraig" target="_blank" rel="noopener noreferrer" class="contact-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
          </svg>
          <span>GitHub</span>
        </a>
        
        <a href="https://linkedin.com/in/christophecraig" target="_blank" rel="noopener noreferrer" class="contact-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
            <rect x="2" y="9" width="4" height="12"></rect>
            <circle cx="4" cy="4" r="2"></circle>
          </svg>
          <span>LinkedIn</span>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-section {
    padding: var(--space-4xl) 0;
    background: linear-gradient(135deg, rgba(122, 158, 175, 0.05) 0%, rgba(255, 255, 255, 0.8) 100%);
    border-radius: var(--radius-xl);
    margin: var(--space-3xl) 0;
  }
  
  .section-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-xl);
  }
  
  .section-header {
    margin-bottom: var(--space-3xl);
  }
  
  .section-title {
    font-size: 2.5rem;
    color: var(--primary-dark);
    margin-bottom: var(--space-md);
  }
  
  .section-divider {
    width: 80px;
    height: 4px;
    background: linear-gradient(to right, var(--accent), var(--primary));
    border-radius: var(--radius-full);
    margin: 0 auto var(--space-xl);
  }
  
  .section-description {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 700px;
    margin: 0 auto var(--space-2xl);
    line-height: 1.7;
  }
  
  .contact-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2xl);
  }
  
  .cta-buttons {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    width: 100%;
    max-width: 400px;
    margin-bottom: var(--space-2xl);
  }
  
  .contact-methods {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
    width: 100%;
  }
  
  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-lg) var(--space-xl);
    background: var(--surface);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    color: var(--primary-dark);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    width: 100%;
    max-width: 350px;
    justify-content: center;
  }
  
  .contact-link:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    background: rgba(122, 158, 175, 0.1);
  }
  
  @media (min-width: 768px) {
    .contact-section {
      padding: var(--space-4xl) 0;
      margin: var(--space-4xl) 0;
    }
    
    .section-container {
      padding: 0 var(--space-2xl);
    }
    
    .section-title {
      font-size: 3rem;
    }
    
    .cta-buttons {
      flex-direction: row;
      justify-content: center;
      max-width: none;
    }
    
    .contact-methods {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
    }
    
    .contact-link {
      width: auto;
      min-width: 250px;
    }
  }
  
  @media (min-width: 992px) {
    .section-container {
      padding: 0 var(--space-3xl);
    }
    
    .section-title {
      font-size: 3.5rem;
    }
    
    .section-description {
      font-size: 1.35rem;
    }
  }
  
  @media (max-width: 768px) {
    .contact-section {
      padding: var(--space-3xl) 0;
      margin: var(--space-2xl) 0;
    }
    
    .section-container {
      padding: 0 var(--space-md);
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .section-description {
      font-size: 1.1rem;
    }
    
    .cta-buttons {
      gap: var(--space-sm);
      max-width: 100%;
    }
    
    .btn {
      width: 100%;
    }
  }
  
  @media (max-width: 480px) {
    .contact-section {
      padding: var(--space-2xl) 0;
      margin: var(--space-xl) 0;
    }
    
    .section-title {
      font-size: 1.75rem;
    }
    
    .section-description {
      font-size: 1rem;
    }
    
    .contact-link {
      padding: var(--space-md) var(--space-lg);
      min-width: 200px;
      font-size: 0.9rem;
    }
  }
</style>