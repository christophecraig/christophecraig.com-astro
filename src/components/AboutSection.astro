---
interface Props {
  t: any;
}

const { t } = Astro.props;
---

<section class="about-section">
  <div class="section-container">
    <div class="section-header text-center">
      <h2 class="section-title">{t.aboutTitle}</h2>
      <div class="section-divider"></div>
    </div>
    
    <div class="about-content">
      <div class="about-text">
        <p class="lead-text">{t.aboutDescription}</p>
        
        <div class="skills-grid">
          <div class="skill-category">
            <h3>Technical Expertise</h3>
            <ul class="skills-list">
              <li>Full Stack Web Development</li>
              <li>JavaScript, TypeScript, React, Next.js</li>
              <li>Node.js, Express</li>
              <li>WordPress, Strapi</li>
              <li>HTML, CSS, Responsive Design</li>
              <li>Database Design and Management</li>
            </ul>
          </div>
          
          <div class="skill-category">
            <h3>Approach & Values</h3>
            <ul class="skills-list">
              <li>User-Centered Design</li>
              <li>Performance Optimization</li>
              <li>Accessibility Standards</li>
              <li>Agile Methodologies</li>
              <li>Cross-Cultural Communication</li>
              <li>Continuous Learning</li>
            </ul>
          </div>
        </div>
      </div>
      
      <div class="about-image">
        <div class="image-placeholder">
          <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about-section {
    padding: var(--space-4xl) 0;
    background-color: var(--surface);
  }
  
  .section-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-xl);
  }
  
  .section-header {
    margin-bottom: var(--space-3xl);
  }
  
  .section-title {
    font-size: 2.5rem;
    color: var(--primary-dark);
    margin-bottom: var(--space-md);
  }
  
  .section-divider {
    width: 80px;
    height: 4px;
    background: linear-gradient(to right, var(--accent), var(--primary));
    border-radius: var(--radius-full);
    margin: 0 auto;
  }
  
  .about-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-3xl);
    align-items: center;
  }
  
  .lead-text {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: var(--space-2xl);
  }
  
  .skills-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
  }
  
  .skill-category h3 {
    font-size: 1.5rem;
    color: var(--primary-dark);
    margin-bottom: var(--space-md);
    position: relative;
    padding-bottom: var(--space-sm);
  }
  
  .skill-category h3::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50px;
    height: 3px;
    background-color: var(--accent);
    border-radius: var(--radius-full);
  }
  
  .skills-list {
    padding-left: var(--space-lg);
  }
  
  .skills-list li {
    margin-bottom: var(--space-sm);
    position: relative;
    padding-left: var(--space-md);
  }
  
  .skills-list li::before {
    content: "â–¹";
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: bold;
  }
  
  .about-image {
    display: flex;
    justify-content: center;
  }
  
  .image-placeholder {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(122, 158, 175, 0.1) 0%, rgba(255, 255, 255, 0.8) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary);
    box-shadow: var(--shadow-md);
  }
  
  @media (min-width: 768px) {
    .about-section {
      padding: var(--space-4xl) 0;
    }
    
    .section-container {
      padding: 0 var(--space-2xl);
    }
    
    .section-title {
      font-size: 3rem;
    }
    
    .about-content {
      grid-template-columns: 2fr 1fr;
      gap: var(--space-4xl);
    }
    
    .skills-grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-2xl);
    }
    
    .image-placeholder {
      width: 250px;
      height: 250px;
    }
  }
  
  @media (min-width: 992px) {
    .section-container {
      padding: 0 var(--space-3xl);
    }
    
    .section-title {
      font-size: 3.5rem;
    }
    
    .lead-text {
      font-size: 1.35rem;
    }
    
    .image-placeholder {
      width: 300px;
      height: 300px;
    }
  }
  
  @media (max-width: 768px) {
    .about-section {
      padding: var(--space-3xl) 0;
    }
    
    .section-container {
      padding: 0 var(--space-md);
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .lead-text {
      font-size: 1.15rem;
    }
    
    .skills-grid {
      gap: var(--space-lg);
    }
    
    .skill-category h3 {
      font-size: 1.25rem;
    }
    
    .image-placeholder {
      width: 180px;
      height: 180px;
    }
  }
  
  @media (max-width: 480px) {
    .about-section {
      padding: var(--space-2xl) 0;
    }
    
    .section-title {
      font-size: 1.75rem;
    }
    
    .skills-grid {
      grid-template-columns: 1fr;
    }
    
    .image-placeholder {
      width: 150px;
      height: 150px;
    }
  }
</style>