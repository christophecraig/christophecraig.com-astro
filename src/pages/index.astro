---
import { getTranslations } from '../i18n/utils';
import CustomHeader from '../components/CustomHeader.astro';
import CustomFooter from '../components/CustomFooter.astro';
import Hero from '../components/Hero.astro';
import AboutSection from '../components/AboutSection.astro';
import ProjectsSection from '../components/ProjectsSection.astro';
import ContactSection from '../components/ContactSection.astro';
import SpotifyTracks from '../components/SpotifyTracks.astro';
import { SpotifyService } from '../services/spotify';
import ApprentisAgrisImage from '../assets/logo-apprentis-agris.svg';
import '../styles/global.css';

// Set language to Fr (default)
const lang = 'fr';
const t = getTranslations(lang);

// Initialize Spotify service
const spotifyService = new SpotifyService();

// Fetch user data
const topTracks = await spotifyService.getUserTopTracks(5);
const recentlyPlayed = await spotifyService.getUserRecentlyPlayed(5);

// Define projects data
const projects = [
  {
    id: 'apprentisagris',
    title: t.apprentisagrisTitle,
    description: t.apprentisagrisDescription,
    technologies: ['WordPress', 'PHP', 'JavaScript'],
    imageUrl: ApprentisAgrisImage.src,
  },
  {
    id: 'cro',
    title: t.croTitle,
    description: t.croDescription,
    url: t.croUrl,
    technologies: ['React', 'JavaScript', 'API'],
    imageUrl: '/images/cro-preview.jpg' // We'll add this later
  },
  {
    id: 'strapi-next',
    title: t.strapiNextTitle,
    description: t.strapiNextDescription,
    technologies: ['Strapi', 'Next.js', 'React'],
  }
];
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{t.greeting} - Christophe Craig</title>
    <meta name="description" content={t.tagline} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <CustomHeader currentLang={lang} path="/" {t} />
    <main>
      <div class="container">
        <Hero {t} currentLang={lang} />
        <AboutSection {t} />
        <SpotifyTracks {topTracks} {recentlyPlayed} />
        <ProjectsSection {t} {projects} />
        <ContactSection {t} />
      </div>
    </main>
    
    <CustomFooter {t} currentLang={lang} />
  </body>
</html>
