---
import { getTranslations, detectLanguage } from '../i18n/utils';
import CustomHeader from '../components/CustomHeader.astro';
import CustomFooter from '../components/CustomFooter.astro';

// Detect language from request
const lang = detectLanguage(Astro.request);
const t = getTranslations(lang);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{t.aboutTitle} - Christophe Craig</title>
    <meta name="description" content={t.aboutDescription} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <CustomHeader currentLang={lang} path="/about" {t} />
    
    <main>
      <section class="about-page">
        <div class="section-header">
          <h1>{t.aboutTitle}</h1>
        </div>
        
        <div class="about-content">
          <p>{t.aboutDescription}</p>
          
          <h2>Skills</h2>
          <ul>
            <li>Full Stack Web Development</li>
            <li>JavaScript, TypeScript, React, Next.js</li>
            <li>Node.js, Express</li>
            <li>WordPress, Strapi</li>
            <li>HTML, CSS, Responsive Design</li>
            <li>Database Design and Management</li>
          </ul>
          
          <h2>Experience</h2>
          <p>With several years of experience in web development, I've worked on a variety of projects ranging from simple websites to complex web applications. My bicultural background gives me a unique perspective on user experience and design.</p>
        </div>
      </section>
    </main>
    
    <CustomFooter {t} currentLang={lang} />
  </body>
</html>

<style>
  .about-page {
    margin-bottom: 3rem;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .section-header h1 {
    font-size: 2.5rem;
    color: var(--accent-dark);
  }
  
  .about-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .about-content h2 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--accent-dark);
  }
  
  .about-content ul {
    padding-left: 1.5rem;
  }
  
  .about-content li {
    margin-bottom: 0.5rem;
  }
  
  @media (max-width: 720px) {
    .section-header h1 {
      font-size: 2rem;
    }
  }
</style>