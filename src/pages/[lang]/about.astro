---
import { getTranslations, isValidLanguage } from '../../i18n/utils';
import CustomHeader from '../../components/CustomHeader.astro';
import CustomFooter from '../../components/CustomFooter.astro';
import SpotifyTracks from '../../components/SpotifyTracks.astro';
import { SpotifyService } from '../../services/spotify';
import '../../styles/global.css';

// Get language from path parameter
const lang = isValidLanguage(Astro.params.lang) ? Astro.params.lang : 'fr';
const t = getTranslations(lang);

// Initialize Spotify service
const spotifyService = new SpotifyService();

// Fetch user data
const topTracks = await spotifyService.getUserTopTracks(5);
const recentlyPlayed = await spotifyService.getUserRecentlyPlayed(5);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{t.aboutTitle} - Christophe Craig</title>
    <meta name="description" content={t.aboutDescription} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <CustomHeader currentLang={lang} path={Astro.params.lang ? `/${Astro.params.lang}/about` : '/fr/about'} {t} />
    
    <main>
      <div class="container">
        <section class="about-page">
          <div class="section-header">
            <h1>{t.aboutTitle}</h1>
          </div>
          
          <div class="about-content">
            <p>{t.aboutDescription}</p>
            
            <h2>{t.coreCompetencies}</h2>
            <ul>
              <li><strong>{t.fullStackDevelopment}</strong> - {t.fullStackDevelopmentDesc}</li>
              <li><strong>{t.modernJavaScript}</strong> - {t.modernJavaScriptDesc}</li>
              <li><strong>{t.cmsExpertise}</strong> - {t.cmsExpertiseDesc}</li>
              <li><strong>{t.performanceOptimization}</strong> - {t.performanceOptimizationDesc}</li>
              <li><strong>{t.responsiveDesign}</strong> - {t.responsiveDesignDesc}</li>
              <li><strong>{t.agileMethodologies}</strong> - {t.agileMethodologiesDesc}</li>
            </ul>
            
            <h2>{t.whyWorkWithMe}</h2>
            <p>{t.whyWorkWithMeDesc}</p>
            
            <ul>
              <li><strong>{t.thinkGlobally}</strong> - {t.thinkGloballyDesc}</li>
              <li><strong>{t.communicateEffectively}</strong> - {t.communicateEffectivelyDesc}</li>
              <li><strong>{t.deliverValue}</strong> - {t.deliverValueDesc}</li>
              <li><strong>{t.adaptQuickly}</strong> - {t.adaptQuicklyDesc}</li>
            </ul>
            
            <blockquote>
              <p>{t.greatCodeQuote}</p>
            </blockquote>
          </div>
          
          <!-- Spotify Section -->
          <SpotifyTracks {topTracks} {recentlyPlayed} />
        </section>
      </div>
    </main>
    
    <CustomFooter {t} currentLang={lang} />
  </body>
</html>

<style>
  .about-page {
    margin-bottom: 3rem;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .section-header h1 {
    font-size: 2.5rem;
    color: var(--accent-dark);
  }
  
  .about-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .about-content h2 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--accent-dark);
  }
  
  .about-content ul {
    padding-left: 1.5rem;
  }
  
  .about-content li {
    margin-bottom: 0.5rem;
  }
  
  @media (max-width: 720px) {
    .section-header h1 {
      font-size: 2rem;
    }
  }
</style>