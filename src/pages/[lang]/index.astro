---
import { getTranslations, isValidLanguage } from '../../i18n/utils';
import CustomHeader from '../../components/CustomHeader.astro';
import CustomFooter from '../../components/CustomFooter.astro';
import Hero from '../../components/Hero.astro';
import AboutSection from '../../components/AboutSection.astro';
import ProjectsSection from '../../components/ProjectsSection.astro';
import ContactSection from '../../components/ContactSection.astro';
import ApprentisAgrisImage from '../../assets/apprentis-agris-square.webp';
import '../../styles/global.css';

// Get language from path parameter
const lang = isValidLanguage(Astro.params.lang) ? Astro.params.lang : 'fr';
const t = getTranslations(lang);

// Define projects data
const projects = [
  {
    id: 'apprentisagris',
    title: t.apprentisagrisTitle,
    description: t.apprentisagrisDescription,
    technologies: ['WordPress', 'PHP', 'JavaScript'],
    imageUrl: ApprentisAgrisImage
  },
  {
    id: 'cro',
    title: t.croTitle,
    description: t.croDescription,
    url: t.croUrl,
    technologies: ['React', 'JavaScript', 'API'],
    imageUrl: '/images/cro-preview.jpg'
  },
  {
    id: 'strapi-next',
    title: t.strapiNextTitle,
    description: t.strapiNextDescription,
    technologies: ['Strapi', 'Next.js', 'React'],
  }
];
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{t.greeting} - Christophe Craig</title>
    <meta name="description" content="Full Stack Web Developer crafting digital experiences that solve real problems and drive business growth. Specializing in React, Next.js, Node.js, and modern web technologies." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <CustomHeader currentLang={lang} path={Astro.params.lang ? `/${Astro.params.lang}/` : '/fr/'} {t} />
    
    <main class="main-homepage">
      <Hero {t} />
      <AboutSection {t} />
      <ProjectsSection {t} {projects} />
      <ContactSection {t} />
    </main>
    
    <CustomFooter {t} currentLang={lang} />
  </body>
</html>

<style>
  .main-homepage {
    width: 100%;
    max-width: none;
    padding: 0;
  }
  
  /* Ensure full-width sections */
  .hero, .about-section, .projects-section, .contact-section {
    width: 100%;
    max-width: none;
  }
  
  /* Remove default container padding for full-width layout */
  .hero .container,
  .about-section .section-container,
  .projects-section .section-container,
  .contact-section .section-container {
    padding-left: 0;
    padding-right: 0;
    max-width: none;
  }
  
  /* Add back padding for content within sections */
  .hero-content,
  .about-content,
  .projects-grid,
  .contact-content {
    padding-left: var(--space-xl);
    padding-right: var(--space-xl);
  }
  
  @media (min-width: 768px) {
    .hero-content,
    .about-content,
    .projects-grid,
    .contact-content {
      padding-left: var(--space-2xl);
      padding-right: var(--space-2xl);
    }
  }
  
  @media (min-width: 992px) {
    .hero-content,
    .about-content,
    .projects-grid,
    .contact-content {
      padding-left: var(--space-3xl);
      padding-right: var(--space-3xl);
    }
  }
  
  @media (min-width: 1200px) {
    .hero-content,
    .about-content,
    .projects-grid,
    .contact-content {
      padding-left: var(--space-4xl);
      padding-right: var(--space-4xl);
    }
  }
</style>