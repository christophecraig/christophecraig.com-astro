---
import { getTranslations, isValidLanguage } from '../../i18n/utils';
import CustomHeader from '../../components/CustomHeader.astro';
import CustomFooter from '../../components/CustomFooter.astro';
import ProjectCard from '../../components/ProjectCard.astro';

// Get language from path parameter
const lang = isValidLanguage(Astro.params.lang) ? Astro.params.lang : 'fr';
const t = getTranslations(lang);

// Define projects data
const projects = [
  {
    id: 'apprentisagris',
    title: t.apprentisagrisTitle,
    description: t.apprentisagrisDescription,
    technologies: ['WordPress', 'PHP', 'JavaScript'],
  },
  {
    id: 'cro',
    title: t.croTitle,
    description: t.croDescription,
    url: t.croUrl,
    technologies: ['React', 'JavaScript', 'API'],
    imageUrl: '/images/cro-preview.jpg'
  },
  {
    id: 'strapi-next',
    title: t.strapiNextTitle,
    description: t.strapiNextDescription,
    technologies: ['Strapi', 'Next.js', 'React'],
  }
];
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{t.projectsTitle} - Christophe Craig</title>
    <meta name="description" content={t.projectsTitle} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <CustomHeader currentLang={lang} path={Astro.params.lang ? `/${Astro.params.lang}/projects` : '/projects'} {t} />
    
    <main>
      <section class="projects-page">
        <div class="section-header">
          <h1>{t.projectsTitle}</h1>
        </div>
        
        <div class="projects-intro">
          <p>Here are some of the projects I've worked on. Each project represents a unique challenge and solution in web development.</p>
        </div>
        
        <div class="projects-grid">
          {projects.map((project) => (
            <ProjectCard {project} {t} />
          ))}
        </div>
      </section>
    </main>
    
    <CustomFooter {t} currentLang={lang} />
  </body>
</html>

<style>
  .projects-page {
    margin-bottom: 3rem;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .section-header h1 {
    font-size: 2.5rem;
    color: var(--accent-dark);
  }
  
  .projects-intro {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 2rem;
    font-size: 1.1rem;
    color: rgb(var(--gray-dark));
  }
  
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  @media (max-width: 720px) {
    .section-header h1 {
      font-size: 2rem;
    }
    
    .projects-intro {
      font-size: 1rem;
    }
    
    .projects-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>